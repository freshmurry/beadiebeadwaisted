<div class="panel panel-default">
  <div class="panel-heading">
    Create Your Listing
  </div>
  <div class="panel-body">
    <div class="container">

      <%= form_for @bead , html: { multipart: true } do |f| %>

        <div class="row">
          
        </div>

        <div class="row">
          <div class="form-group">
            <label>Listing name</label>
            <%= f.text_field :listing_name, placeholder: "Be clear and descriptive", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label>Summary</label>
            <%= f.text_area :summary, rows: 5, placeholder: "Write a good summary about your lisitng.", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <label>Price</label>
              <div class="input-group">
                <div class="input-group-addon">$</div>
                  <%= f.text_field :price, placeholder: "eg. $100", class: "form-control" %>
              </div>
            </div>
          </div>
          
          <div class="col-md-4 select">
            <div class="form-group">
              <label>Waist Size</label>
              <%= f.select :waist_size, [["20", 20], ["21", 21], ["22", 22], ["23", 23], ["24", 24],
               ["25", 25], ["26", 26], ["27", 27], ["28", 28], ["29", 29], ["30", 30], ["31", 31], ["32", 32], ["33", 33], ["34", 34], ["35", 35], ["36", 36],
              ["37", 37], ["38", 38], ["39", 39], ["40", 40], ["41", 41], ["42", 42]], prompt: "Select...", class: "form-control" %>
            </div>
          </div>
          
        </div>

        <div class="row">
          <div class="col-md-4">
            <div class="form-group">
              <span class="btn btn-default btn-file">
                <i class="fa fa-cloud-upload fa-lg"></i> Upload Photos
                <%= file_field_tag "images[]", type: :file, multiple: true %>
              </span>
            </div>
          </div>
        </div>

        <div id="photos"><%= render 'photos/list' %></div>

        <div class="row">
          <div class="form-group">
            <%= f.check_box :active %> Active
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Save", class: "btn btn-primary center" %>
        </div>
      <% end %>

    </div>
  </div>
</div>