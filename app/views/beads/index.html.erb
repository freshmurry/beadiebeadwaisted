<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Your Listing", beads_path, class: "sidebar-link active" %></li>
      <li class="sidebar-item"><%= link_to "Your Orders", current_orders_path, class: "sidebar-link" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listings
      </div>
      <div class="panel-body">
        <% @beads.each do |bead| %>
          <div class="row">
            <div class="col-md-2">
              <%= image_tag bead.photos[0].image.url(:thumb) if bead.photos.length > 0 %>
            </div>
            <div class="col-md-7">
              <h4><%= bead.listing_name %></h4>
            </div>
            <div class="col-md-3 right">
              <%= link_to "Update", edit_bead_path(bead), class: "btn btn-primary" %>
            </div>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>